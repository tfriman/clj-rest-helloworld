#!/bin/bash -e
#
# S2I assemble script for the 's2i-clojure' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 's2i-clojure' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/libexec/s2i/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ -d /tmp/artifacts/.m2 ]; then
  echo "---x> Restoring build artifacts..."
  mv /tmp/artifacts/.m2 ${HOME}/
fi

echo "---x> Installing application source..."
mv /tmp/src ${HOME}/src

echo "---x> Building application from source..."

pushd ${HOME}/src > /dev/null
${HOME}/lein uberjar

mv ${HOME}/target/uberjar/demoapp.jar ${HOME}/app-standalone.jar

popd > /dev/null